{
    "compilerOptions": {
        "baseUrl": "tsconfig",
        "lib": [
            "es2017"
        ],
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "rootDir": "./",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "target": "es6"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": []
}